a = input()
schetchik = 0
save_num_letter = []
num_letter = 0
b = len(a) - 1
while schetchik < len(a):
    for i in a:

        schetchik +=1
        num_letter +=1

        if schetchik == len(a):
            save_num_letter.append(num_letter)
        if i == ' ':
            num_letter -= 1
            save_num_letter.append(num_letter)
            num_letter = 0
print(save_num_letter, ' количество всех букв')
max_number = max(save_num_letter)
print(max_number, "максимальное число")
num_letter_under= 0
for i in save_num_letter:
    while i <= max_number:
        if i < max_number:
            num_letter_under += i+1
print(num_letter_under, 'число букв перед словом')
